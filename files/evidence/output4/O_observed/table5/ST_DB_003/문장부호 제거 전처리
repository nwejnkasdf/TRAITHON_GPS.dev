n","    print(f\"총 {len(json_files)}개의 파일 처리를 시작합니다.\")\n","\n","    for idx, file_path in enumerate(json_files):\n","        with open(file_path, 'r', encoding='utf-8') as f:\n","            data = json.load(f)\n","\n","        # A. 원천 데이터 정보(sourceDataInfo) 정제\n","        source_info = data.get(\"sourceDataInfo\", {})\n","        for field in [\"newsTitle\", \"newsSubTitle\", \"newsContent\"]:\n","            if field in source_info:\n","                source_info[field] = punct_pattern.sub('', source_info[field])\n","\n","        # B. 문장 정보(sentenceInfo) 정제 및 글자 수 업데이트\n","        if \"sentenceInfo\" in source_info:\n","            for sent in source_info[\"sentenceInfo\"]:\n","                cleaned_sent = punct_pattern.sub('', sent[\"sentenceContent\"])\n","                sent[\"sentenceContent\"] = cleaned_sent\n","                sent[\"sentenceSize\"] = len(cleaned_sent) # 메타데이터 동기화\n","\n","        # C. 세부 구분(P1/P2)에 따른 라벨링 데이터 정제\n","        labeled_info = data.get(\"labeledDataInfo\", {})\n","        part_num = source_info.get(\"partNum\", \"\")\n","\n","        if part_num == \"P1\" and \"newTitle\" in labeled_info:\n","            labeled_info[\"newTitle\"] = punct_pattern.sub('', labeled_info[\"newTitle\"])\n","        elif part_num == \"P2\" and \"processSentenceInfo\" in labeled_info:\n","            for p_sent in labeled_info[\"processSentenceInfo\"]:\n","                if \"sentenceContent\" in p_sent:\n","                    p_sent[\"sentenceContent\"] = punct_pattern.sub('', p_sent[\"sentenceContent\"])\n","\n","        # 로컬의 별도 폴더에 결과 저장\n","        file_name = os.path.basename(file_path)\n","        with open(f\"/content/cleaned_data/{file_name}\", 'w', encoding='utf-8') as f:\n","            json.dump(data, f, ensure_ascii=False, indent=4)\n","\n","        if (idx + 1) % 1000 == 0:\n","            print(f\"{idx + 1}개 완료...\")\n","\n","# 4. 정제 실행\n","remove_punctuation_and_update()\n","\n","# 5. 처리된 데이터를 다시 압축하여 구글 드라이브로 전송\n","!zip -j -q /content/cleaned_dataset_5000.zip /content/cleaned_data/*\n","!mkdir -p \"{DRIVE_OUTPUT_DIR}\"\n","!cp /content/cleaned_dataset_5000.zip \"{DRIVE_OUTPUT_DIR}\"\n","\n","print(f\"최종 결과가 드라이브 내 {DRIVE_OUTPUT_DIR} 경로로 안전하게 업로드되었습니다.\")"]}]}